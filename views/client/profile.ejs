<!DOCTYPE html>
<html class="no-js" lang="en">

    <%- include('layouts/head.ejs') %>

<body class="config">
    <div class="preloader is-active">
        <div class="preloader__wrap">

            <img class="preloader__img" src="/images/PurePicksIcon.ico" alt="loading"></div>
    </div>

    <!--====== Main App ======-->
    <div id="app">

        <!--====== Main Header ======-->
        <%- include('layouts/topNav.ejs') %>
        <!--====== End - Main Header ======-->


        <!--====== App Content ======-->
        <div class="app-content">

            <!--====== Section 1 ======-->
            <div class="u-s-p-y-60">

                <!--====== Section Content ======-->
                <div class="section__content">
                    <div class="container">
                        <div class="breadcrumb">
                            <div class="breadcrumb__wrap">
                                <ul class="breadcrumb__list">
                                    <li class="has-separator">

                                        <a href="/">Home</a></li>
                                    <li class="is-marked">

                                        <a href="/account">My Account</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--====== End - Section 1 ======-->

            <!--====== Section 2 ======-->
            <div class="u-s-p-b-60">

                <!--====== Section Content ======-->
                <div class="section__content">
                    <div class="dash">
                        <div class="container">
                            <div class="row">

                                <%- include('layouts/accountFeatures.ejs') %>

                                <div class="col-lg-9 col-md-12">
                                    <div class="dash__box dash__box--shadow dash__box--radius dash__box--bg-white u-s-m-b-30">
                                        <div class="dash__pad-2">
                                            <h1 class="dash__h1 u-s-m-b-14">My Profile</h1>

                                            <span class="dash__text u-s-m-b-30"></span>
                                            <% if(profile){ %>
                                                <div class="row">
                                                    <div class="col-lg-4 u-s-m-b-30">
                                                        <h2 class="dash__h2 u-s-m-b-8">Full Name</h2>
    
                                                        <span class="dash__text"><%= profile.fName %> <%= profile.lName %></span>
                                                    </div>
                                                    <div class="col-lg-4 u-s-m-b-30">
                                                        <h2 class="dash__h2 u-s-m-b-8">E-mail</h2>
    
                                                        <span class="dash__text"><%= userData.email %></span>
                                                        
                                                    </div>
                                                    <div class="col-lg-4 u-s-m-b-30">
                                                        <h2 class="dash__h2 u-s-m-b-8">Phone</h2>
    
                                                        <span class="dash__text"><%= userData.mobileNumber %></span>
                                                        
                                                    </div>
                                                    <div class="col-lg-4 u-s-m-b-30">
                                                        <h2 class="dash__h2 u-s-m-b-8">Birthday</h2>
    
                                                        <span class="dash__text"><%= profile.birthMonth %>-<%= profile.birthDay %>-<%= profile.birthYear %></span>
                                                    </div>
                                                    <div class="col-lg-4 u-s-m-b-30">
                                                        <h2 class="dash__h2 u-s-m-b-8">Gender</h2>
    
                                                        <span class="dash__text"><%= profile.gender %></span>
                                                    </div>
                                                    <div class="col-lg-4 u-s-m-b-30">
                                                        <h2 class="dash__h2 u-s-m-b-8">Street Address</h2>
    
                                                        <span class="dash__text"><%= profile.streetAddress %></span>
                                                    </div>
                                                    <div class="col-lg-4 u-s-m-b-30">
                                                        <h2 class="dash__h2 u-s-m-b-8">Country</h2>
    
                                                        <span class="dash__text"><%= profile.country %></span>
                                                    </div>
                                                    <div class="col-lg-4 u-s-m-b-30">
                                                        <h2 class="dash__h2 u-s-m-b-8">State</h2>
    
                                                        <span class="dash__text"><%= profile.state %></span>
                                                    </div>
                                                    <div class="col-lg-4 u-s-m-b-30">
                                                        <h2 class="dash__h2 u-s-m-b-8">City</h2>
    
                                                        <span class="dash__text"><%= profile.city %></span>
                                                    </div>
                                                    <div class="col-lg-4 u-s-m-b-30">
                                                        <h2 class="dash__h2 u-s-m-b-8">Pin</h2>
    
                                                        <span class="dash__text"><%= profile.pin %></span>
                                                    </div>
                                                </div>
                                            <% }else{ %>
                                                <div class="row">
                                                    <div class="col-lg-4 u-s-m-b-30">
                                                        <h2 class="dash__h2 u-s-m-b-8">Full Name</h2>
    
                                                        <span class="dash__text"></span>
                                                    </div>
                                                    <div class="col-lg-4 u-s-m-b-30">
                                                        <h2 class="dash__h2 u-s-m-b-8">E-mail</h2>
    
                                                        <span class="dash__text"><%= userData.email %></span>
                                                        
                                                    </div>
                                                    <div class="col-lg-4 u-s-m-b-30">
                                                        <h2 class="dash__h2 u-s-m-b-8">Phone</h2>
    
                                                        <span class="dash__text"><%= userData.mobileNumber %></span>
                                                        
                                                    </div>
                                                    <div class="col-lg-4 u-s-m-b-30">
                                                        <h2 class="dash__h2 u-s-m-b-8">Birthday</h2>
    
                                                        <span class="dash__text"></span>
                                                    </div>
                                                    <div class="col-lg-4 u-s-m-b-30">
                                                        <h2 class="dash__h2 u-s-m-b-8">Gender</h2>
    
                                                        <span class="dash__text"></span>
                                                    </div>
                                                    <div class="col-lg-4 u-s-m-b-30">
                                                        <h2 class="dash__h2 u-s-m-b-8">Street Address</h2>
    
                                                        <span class="dash__text"></span>
                                                    </div>
                                                    <div class="col-lg-4 u-s-m-b-30">
                                                        <h2 class="dash__h2 u-s-m-b-8">Country</h2>
    
                                                        <span class="dash__text"></span>
                                                    </div>
                                                    <div class="col-lg-4 u-s-m-b-30">
                                                        <h2 class="dash__h2 u-s-m-b-8">State</h2>
    
                                                        <span class="dash__text"></span>
                                                    </div>
                                                    <div class="col-lg-4 u-s-m-b-30">
                                                        <h2 class="dash__h2 u-s-m-b-8">City</h2>
    
                                                        <span class="dash__text"></span>
                                                    </div>
                                                    <div class="col-lg-4 u-s-m-b-30">
                                                        <h2 class="dash__h2 u-s-m-b-8">Pin</h2>
    
                                                        <span class="dash__text"></span>
                                                    </div>
                                                </div>
                                            <% } %>
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="dash__link dash__link--secondary u-s-m-b-30">

                                                        </div>
                                                    <div class="u-s-m-b-16">

                                                        <a class="dash__custom-link btn--e-transparent-brand-b-2" href="/profileEdit">Edit Profile</a></div>
                                                    
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--====== End - Section Content ======-->
            </div>
            <!--====== End - Section 2 ======-->
        </div>
        <!--====== End - App Content ======-->


        <!--====== Main Footer ======-->
        <%- include('layouts/footer.ejs') %>

        <!--====== Modal Section ======-->

        <!--====== End - Modal Section ======-->
    </div>
    <!--====== End - Main App ======-->


    <!--====== Google Analytics: change UA-XXXXX-Y to be your site's ID ======-->
    <script>
        window.ga = function() {
            ga.q.push(arguments)
        };
        ga.q = [];
        ga.l = +new Date;
        ga('create', 'UA-XXXXX-Y', 'auto');
        ga('send', 'pageview')
    </script>
    <script src="https://www.google-analytics.com/analytics.js" async defer></script>

    <!--====== Vendor Js ======-->
    <script src="/client/js/vendor.js"></script>

    <!--====== jQuery Shopnav plugin ======-->
    <script src="/client/js/jquery.shopnav.js"></script>

    <!--====== App ======-->
    <script src="/client/js/app.js"></script>

    <!--====== Noscript ======-->
    <noscript>
        <div class="app-setting">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="app-setting__wrap">
                            <h1 class="app-setting__h1">JavaScript is disabled in your browser.</h1>

                            <span class="app-setting__text">Please enable JavaScript in your browser or upgrade to a JavaScript-capable browser.</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </noscript>
</body>
</html>