                            <% category.forEach(function(category){ %>

                            <div class="col-lg-4 col-md-4 col-sm-6 u-s-m-b-30">
                                <div class="promotion-o">
                                    <div class="aspect aspect--bg-grey aspect--square">

                                        <img class="aspect__img" src="<%= category.categoryImagePath%>" alt=""></div>
                                    <div class="promotion-o__content">

                                        <a class="promotion-o__link btn--e-white-brand" href=""><%= category.categoryName%></a></div>
                                </div>
                            </div>
                            
                            <% }) %>
                            
                        </div>
                    </div>
                </div>
                <!--====== End - Section Content ======-->
            </div>

            <% } %>
            <!--====== End - Section 1 ======-->


            <!--====== Section 2 ======-->
            
            <!--====== End - Section 2 ======-->


            <!--====== Section 3 ======-->
