            </div>
            <!--====== End - Section 4 ======-->


            <!--====== Section 5 ======-->
            <div class="u-s-p-b-60">

                <!--====== Section Intro ======-->
                <div class="section__intro u-s-m-b-46">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="section__text-wrap">
                                    <h1 class="section__heading u-c-secondary u-s-m-b-12">PURE PICKS</h1>

                                    <span class="section__span u-c-silver">RECENTLY OUR OWN PRODUCTS</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
