    <!--====== Main App ======-->
    <div id="app">

        <%- include('layouts/topNav.ejs') %>


        <!--====== App Content ======-->
        <div class="app-content">
            <% if(banner){ %> 
                <!--====== Primary Slider ======-->
                <div class="s-skeleton s-skeleton--h-640 s-skeleton--bg-grey">
                    <div class="owl-carousel primary-style-3" id="hero-slider">
                    
                        <% banner.forEach(function(banner){ %>
                        
                        <div class="hero-slide" style="background-image: url(<%=banner.bannerImagePath%>); color: <%= banner.titleColor %>;">
                            <div class="primary-style-3-wrap">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="slider-content slider-content--animation">
                                            
                                                <span class="content-span-1 "><%=banner.title1%></span>
                                            
                                                <span class="content-span-2 "><%=banner.title2%></span>
                                            
                                                <span class="content-span-3 "><%=banner.title3%></span>
                                            
                                                <span class="content-span-4 "><%=banner.title4%>
                                                
                                                    <span  style="color: <%=banner.priceColor%>">₹<%=banner.price%></span></span>
                                                
                                                <a style="background-color: <%=banner.priceColor%>; color: <%= banner.titleColor %>;" class="shop-now-link" href="<%=banner.targetUrl%>">SHOP NOW</a></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    
                        <% }) %>
                        
                    </div>
                </div>
            <% } %>
